
<div class="container centering">
    <div class="row">
        <div class="col-md-12">
            <img src="assets/img/burger.jpg" alt="burger">
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>Burgers to Eat</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Devoured</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form class="create-form">
                <div class="form-group">
                    <label for="burg">Burger Name:</label>
                    <input type="text" id="burg" name="name">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>